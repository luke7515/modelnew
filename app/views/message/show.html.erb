<h3>Messages in Chat <%=@chat.title%></h3>
<% @chat.messages.each do |message| %>

    <li><%=message.user.email%> => <%=message.content%></li>

<% end %>

<%= form_for(:message, :url => {:controller => 'message', :action => 'create'}) do |f| %>
  <%= f.text_field(:content) %>
  <%= f.hidden_field :chat_id, :value => @chat.id %>
  <%= submit_tag("Send") %>
<%end%>

<%= link_to "Back to Team", :action => 'show', :controller => 'chat', :team => @chat.team%>
